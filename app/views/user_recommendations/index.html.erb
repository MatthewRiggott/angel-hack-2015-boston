<p id="notice"><%= notice %></p>

<h1>Listing Recommendations</h1>

<table>
  <thead class="table-head">
    <tr>
      <th>Event Name</th>
      <th>Event Description</th>
      <th>Address</th>
      <th>City</th>
      <th>State</th>
      <th>Zip</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @event_array.each do |event| %>
      <% if !event.nil? %>
        <tr>
          <td><%= link_to event.title, event%></td>
          <td><%= event.details %></td>
          <td><%= event.address %></td>
          <td><%= event.city %></td>
          <td><%= event.state %></td>
          <td><%= event.zip_code %></td>
          <td><%= link_to 'Edit', edit_recommendation_path(event) %></td>
          <td><%= button_to 'Delete', recommendation_path(event), method: :delete %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Recommendation', new_recommendation_path %>
